{
  "name": "@deadlock-mods/dmodpkg",
  "version": "0.1.0",
  "description": "Library for creating, parsing, and manipulating Deadlock mod packages (.dmodpkg) using native Rust implementation via Bun FFI",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src/",
    "target/release/libdmodpkg.*",
    "target/release/dmodpkg.*",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm run generate-types && cargo build --release",
    "build:debug": "pnpm run generate-types && cargo build",
    "generate-types": "cargo test --lib --quiet || node -e \"process.exit(0)\"",
    "test": "echo 'No tests yet'",
    "clean": "cargo clean && rm -rf src/generated/*.ts",
    "check": "cargo check",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "deadlock",
    "mod",
    "package",
    "dmodpkg",
    "modding",
    "ffi",
    "rust",
    "native",
    "compression",
    "zstd"
  ],
  "author": "stormix <contact@stormix.co>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/deadlock-mod-manager/deadlock-mod-manager",
    "directory": "packages/dmodpkg"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "@deadlock-mods/typescript-config": "workspace:*",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.5.2",
    "bun-types": "^1.3.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "bun": ">=1.3.0"
  }
}
