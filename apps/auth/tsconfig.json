{
  "extends": "@deadlock-mods/typescript-config/base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["bun"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/routeTree.gen.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}