{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Deadlock Mod Manager",
  "version": "../package.json",
  "identifier": "dev.stormix.deadlock-mod-manager",
  "build": {
    "beforeDevCommand": "pnpm ui:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm ui:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Deadlock Mod Manager",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "label": "main",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "active": true,
    "createUpdaterArtifacts": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkzMkQ2MkQwOUVEMTdGNTEKUldSUmY5R2UwR0l0azBvd0cvaXhnWEtlMUhjdjZLallKVjRUU240ZlFtOXd3SG5mbnVUWWp0ci8K",
      "endpoints": [
        "https://github.com/deadlock-mod-manager/deadlock-mod-manager/releases/latest/download/latest.json"
      ]
    },
    "deepLink": {
      "desktop": {
        "schemes": ["deadlock-mod-manager", "deadlock-modmanager"]
      }
    }
  }
}
