{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "db:push": {},
    "db:seed": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "desktop:dev": {
      "cache": false,
      "persistent": true
    },
    "//#lint": {},
    "//#format": {
      "cache": false
    },
    "version:generate": {
      "cache": false
    }
  },
  "globalEnv": ["BETTERSTACK_API_KEY", "DATABASE_URL"]
}
